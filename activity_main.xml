<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:background="@drawable/papers_co_vs34_blue_dot_paint_art_pattern_htc_background_34_iphone6_plus_wallpaper_640"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account to personalize your experience and protect your info "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/head"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/name"
        android:layout_below="@id/head"
        android:layout_marginTop="80dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email id :"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/email"
        android:layout_below="@id/name"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/pass"
        android:layout_below="@id/email"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age :"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/age"
        android:layout_below="@id/pass"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone no :"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@id/age"
        android:layout_marginTop="40dp"
        android:id="@+id/pnno"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eno"
        android:layout_below="@id/pnno"
        android:text="Emergency Contact :"
        android:textColor="@android:color/white"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textStyle="bold" />
    ]



    <EditText
        android:id="@+id/nameentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:textColor="@android:color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/name"
        android:ems="100"
        android:inputType="textPersonName"
        android:textCursorDrawable="@android:color/black"/>
    <requestFocus />

    <EditText
        android:id="@+id/emailentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameentry"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/email"
        android:textColor="@android:color/white"
        android:ems="100"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@android:color/black" />
    <requestFocus />


    <EditText
        android:id="@+id/passentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailentry"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/pass"
        android:ems="10"
        android:inputType="textPassword"
        android:textCursorDrawable="@android:color/black"/>
    <requestFocus />

    <EditText
        android:id="@+id/ageentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passentry"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/age"
        android:textColor="@android:color/white"
        android:ems="3"
        android:maxLength="2"
        android:inputType="number"
        android:textCursorDrawable="@android:color/black"
        />

    <requestFocus />

    <EditText
        android:id="@+id/pnoentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ageentry"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/pnno"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="10"
        android:textCursorDrawable="@android:color/black"
        />
    <requestFocus/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textCursorDrawable="@android:color/white"
        android:layout_below="@id/pnoentry"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/eno"
        android:textColor="@android:color/white"
        android:ems="10"
        android:maxLength="10"
        android:inputType="phone"
        android:id="@+id/enoentry"

        />
    <requestFocus/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@+id/enoentry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=" SIGN IN "
        android:id="@+id/button_signin"
        android:textColor="@android:color/black"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" FORGOT PASSWORD "
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_forgotpass"

        android:textSize="10sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/black"
        android:id="@+id/button_log_in"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text="ALREADY HAVE AN ACCOUNT"
        />



</RelativeLayout>