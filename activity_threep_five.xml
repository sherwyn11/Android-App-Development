<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/papers_co_vs34_blue_dot_paint_art_pattern_htc_background_34_iphone6_plus_wallpaper_640"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ThreepFiveActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  EMERGENCY CONTACT  "
        android:background="@drawable/my_button"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/button_eno1"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonchat"
        android:layout_marginTop="200dp"
        android:text="Stress"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:background="@drawable/buttonchat"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="40dp"
        android:layout_below="@id/button1"
        android:text="Depression"
         />

    <Button
        android:id="@+id/button3"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonchat"
        android:text="Anxiety"
         />

</RelativeLayout>