<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/papers_co_vs34_blue_dot_paint_art_pattern_htc_background_34_iphone6_plus_wallpaper_640"
    tools:context=".ThirdActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="80dp"

        android:id="@+id/text1"
        android:text="Hey there... Im your new friend Alisha..."

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/text1"
        android:id="@+id/text2"
        android:text="Ill present you with some sentences and youll choose among the options about how you feel at the moment..."
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/text2"
        android:id="@+id/text3"
        android:text="     PLEASE answer carefully, even if you dont like the answers :P"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="  LET'S DO THIS  "
        android:textStyle="bold"
        android:background="@drawable/buttonchat"
        android:id="@+id/button_letsdothis"
        android:textSize="15sp"/>

</RelativeLayout>